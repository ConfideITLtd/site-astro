---
import config from "@config/config.json";
import { Icon } from 'astro-icon/components';
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand md:w-[150px] lg:w-auto text-center relative">
  {
    src || logo && (
      <Icon
        width={logo_width.replace("px", "") * 2}
        height={logo_height.replace("px", "") * 2}
        name={src ? src : logo}
        alt={title}
        style={{
          height: logo_height.replace("px", "") + "px",
          width: logo_width.replace("px", "") + "px",
        }}
        class="m-auto logo"
      />
    )
  }
  <h4>{ logo_text ? (logo_text) : (title)}</h4>
</a>
