---
import Social from '@components/Social.astro';
import { getImagePath } from '@lib/imagePath.astro';
import { Image } from 'astro:assets';

interface Props {
  slug: string;
  data: {
    name: string;
    role: string;
    social: string[];
    description: number;
  }
}

const { slug, data: { name, role, social, description }  } = Astro.props;
const imagePath = getImagePath(slug);
---

<li class="card shadow-none transition-all grayscale hover:grayscale-0 hover:shadow-lg">
  <a href=`team/${slug}`>
    <Image src={imagePath} alt={name} class="object-cover rounded-2xl w-full aspect-[3/2]" />
    <h3 class="text-dark tracking-tight leading-8 font-semibold	text-lg	mt-6">{name}</h3>
    <p class="text-gray-600	text-base	leading-7">{role}</p>
  </a>
  <Social className="social-icons gap-x-6 flex mt-6" source={social} />
</li>
