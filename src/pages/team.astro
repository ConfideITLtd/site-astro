---
import Base from "@layouts/Base.astro";
import { markdownify } from "@lib/utils/textConverter";
import { getEntryBySlug } from "astro:content";
const entry = await getEntryBySlug("team", "index");
const { title, description, members } = entry.data;
import { Image } from 'astro:assets';

members.sort(function (a, b) {
  const aLastName = a.name.split(' ').pop();
  const bLastName = b.name.split(' ').pop();
  if (aLastName < bLastName) {
    return -1;
  }
  if (aLastName > bLastName) {
    return 1;
  }
  return 0;
});

---

<Base title={title} description={description}>

  <section class="section !pb-0">
    <div class="container text-center">
      <div class="mx-auto text-center lg:col-6">
        <h1 class="mb-3" set:html={markdownify(title)} />
        <p set:html={markdownify(description)} />
      </div>
    </div>
  </section>

  <section class="section bg-theme-body dark:bg-darkmode-body">
    <div class="container text-center">
      <div class="lg:gy-3 row">
        {
          members?.map((member) => (
            <div class="lg:col-4 md:col-6 text-center dark:bg-slate-800">
                <div class="relative group mx-auto rounded-2xl drop-shadow-md hover:drop-shadow-xl overflow-hidden transition-all" style="height: 420px">
                  <Image src={`/images/team/${member.image}`} width="380" height="420" alt={member.name} class="" />
                  <div class="bg-[#29C0C9]/30 p-3 text-amber-50 rounded-2xl overlay w-full inset-0 transition-all duration-200 delay-100 group-hover:-translate-y-full">
                    <div set:html={markdownify(member.description)} />
                  </div>+
                </div>
                <div class="py-4">
                  <h4 class="mb-1 font-bold" set:html={markdownify(member.name)} />
                  <p class="mb-4" set:html={markdownify(member.role)} />
                  { Object.keys(member.social ? member.social : []).length > 0 ? (
                    <ul class="social-icons">
                      { member.social.facebook ?
                      <li>
                        <a aria-label="Facebook" href=`${member.social.facebook}` target="_blank" rel="noopener noreferrer nofollow">
                          <span class="sr-only">Facebook</span>
                          <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" class="inline-block" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M504 256C504 119 393 8 256 8S8 119 8 256c0 123.78 90.69 226.38 209.25 245V327.69h-63V256h63v-54.64c0-62.15 37-96.48 93.67-96.48 27.14 0 55.52 4.84 55.52 4.84v61h-31.28c-30.8 0-40.41 19.12-40.41 38.73V256h68.78l-11 71.69h-57.78V501C413.31 482.38 504 379.78 504 256z"></path></svg>
                        </a>
                      </li>
                        : null }
                      { member.social.twitter ?
                      <li>
                      <a aria-label="Twitter" href=`${member.social.twitter}` target="_blank" rel="noopener noreferrer nofollow">
                        <span class="sr-only">Twitter</span>
                        <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" class="inline-block" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M459.37 151.716c.325 4.548.325 9.097.325 13.645 0 138.72-105.583 298.558-298.558 298.558-59.452 0-114.68-17.219-161.137-47.106 8.447.974 16.568 1.299 25.34 1.299 49.055 0 94.213-16.568 130.274-44.832-46.132-.975-84.792-31.188-98.112-72.772 6.498.974 12.995 1.624 19.818 1.624 9.421 0 18.843-1.3 27.614-3.573-48.081-9.747-84.143-51.98-84.143-102.985v-1.299c13.969 7.797 30.214 12.67 47.431 13.319-28.264-18.843-46.781-51.005-46.781-87.391 0-19.492 5.197-37.36 14.294-52.954 51.655 63.675 129.3 105.258 216.365 109.807-1.624-7.797-2.599-15.918-2.599-24.04 0-57.828 46.782-104.934 104.934-104.934 30.213 0 57.502 12.67 76.67 33.137 23.715-4.548 46.456-13.32 66.599-25.34-7.798 24.366-24.366 44.833-46.132 57.827 21.117-2.273 41.584-8.122 60.426-16.243-14.292 20.791-32.161 39.308-52.628 54.253z"></path></svg>
                      </a>
                    </li>
                      : null }

                      { member.social.linkedIn ?
                      <li>
                      <a aria-label="Linkedin" href=`${member.social.linkedIn}` target="_blank" rel="noopener noreferrer nofollow">
                        <span class="sr-only">Linkedin</span>
                        <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 448 512" class="inline-block" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"></path></svg>
                      </a>
                    </li>
                      : null }

                      { member.social.email ?
                      <li>
                      <a aria-label="Linkedin" href=`mailto:${member.social.email}` target="_blank" rel="noopener noreferrer nofollow">
                        <span class="sr-only">email</span>
                        <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 1792 1792" class="inline-block" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M1664 1504v-768q-32 36-69 66-268 206-426 338-51 43-83 67t-86.5 48.5-102.5 24.5h-2q-48 0-102.5-24.5t-86.5-48.5-83-67q-158-132-426-338-37-30-69-66v768q0 13 9.5 22.5t22.5 9.5h1472q13 0 22.5-9.5t9.5-22.5zm0-1051v-24.5l-.5-13-3-12.5-5.5-9-9-7.5-14-2.5h-1472q-13 0-22.5 9.5t-9.5 22.5q0 168 147 284 193 152 401 317 6 5 35 29.5t46 37.5 44.5 31.5 50.5 27.5 43 9h2q20 0 43-9t50.5-27.5 44.5-31.5 46-37.5 35-29.5q208-165 401-317 54-43 100.5-115.5t46.5-131.5zm128-37v1088q0 66-47 113t-113 47h-1472q-66 0-113-47t-47-113v-1088q0-66 47-113t113-47h1472q66 0 113 47t47 113z"/></svg>
                      </a>
                    </li>
                      : null }

                    </ul>
                  ) : null }
                </div>
            </div>
          ))
        }
        </div>
    </div>
  </section>
</Base>
